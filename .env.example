# ============================================
# TOEIC MASTER PLATFORM - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control!
# ============================================

# ============ SERVER CONFIGURATION ============
NODE_ENV=development
PORT=5000
HOST=localhost

# ============ DATABASE CONFIGURATION ============
# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=toeic_master
DB_USER=toeic_user
DB_PASSWORD=toeic_password_secure
DATABASE_URL=postgresql://toeic_user:toeic_password_secure@localhost:5432/toeic_master

# Redis Configuration (for caching/sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# ============ JWT & SECURITY ============
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
BCRYPT_SALT_ROUNDS=12

# ============ 2FA SMS CONFIGURATION ============
# Twilio Configuration (for SMS OTP)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_VERIFY_SERVICE_SID=your_verify_service_sid

# SMS Rate Limiting
SMS_MAX_ATTEMPTS_PER_DAY=5
SMS_OTP_EXPIRY_MINUTES=5

# ============ EMAIL CONFIGURATION ============
# SMTP Configuration (for email verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password
EMAIL_FROM=noreply@toeicmaster.com
EMAIL_FROM_NAME="TOEIC Master"

# ============ FRONTEND CONFIGURATION ============
FRONTEND_URL=http://localhost:3000
APP_URL=http://localhost:5000

# ============ FILE UPLOAD CONFIGURATION ============
MAX_FILE_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,audio/mpeg,audio/wav,application/pdf
UPLOAD_DIR=./uploads

# ============ RATE LIMITING ============
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ============ LOGGING CONFIGURATION ============
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_DIR=./logs

# ============ PAYMENT GATEWAYS ============
# VNPay Configuration
VNPAY_TMN_CODE=your_tmn_code
VNPAY_HASH_SECRET=your_hash_secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:3000/payment/callback

# MoMo Configuration
MOMO_PARTNER_CODE=your_partner_code
MOMO_ACCESS_KEY=your_access_key
MOMO_SECRET_KEY=your_secret_key
MOMO_ENDPOINT=https://test-payment.momo.vn/v2/gateway/api/create

# ============ ANALYTICS & MONITORING ============
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# ============ FEATURE TOGGLES ============
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PAYMENT=false
ENABLE_SOCIAL_LOGIN=false

# ============ ADMIN CONFIGURATION ============
ADMIN_EMAIL=admin@toeicmaster.com
ADMIN_INITIAL_PASSWORD=Admin123!
